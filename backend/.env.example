# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="School Attendance System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Supported: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=school_attendance
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# CACHE & SESSION CONFIGURATION
# ============================================
# IMPORTANT: Use 'redis' for cache driver to enable attendance statistics caching
# Supported cache drivers: file, redis, memcached, database
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ============================================
# REDIS CONFIGURATION
# ============================================
# Required for attendance statistics caching (3600s TTL)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# QUEUE & BROADCAST CONFIGURATION
# ============================================
BROADCAST_DRIVER=log
QUEUE_CONNECTION=sync

# ============================================
# FILESYSTEM CONFIGURATION
# ============================================
# Used for student photo storage
FILESYSTEM_DISK=local

# ============================================
# MEMCACHED CONFIGURATION (Optional)
# ============================================
MEMCACHED_HOST=127.0.0.1

# ============================================
# MAIL CONFIGURATION (Optional)
# ============================================
# Used for notifications (if implemented)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS CONFIGURATION (Optional)
# ============================================
# Only needed if using S3 for file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# PUSHER CONFIGURATION (Optional)
# ============================================
# Only needed for real-time features
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ============================================
# SANCTUM AUTHENTICATION
# ============================================
# Add your frontend domain(s) for CORS support
# Comma-separated list for multiple domains
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# ============================================
# FRONTEND (VITE) CONFIGURATION
# ============================================
# These variables are exposed to the frontend
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL=http://localhost:8000/api
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# ATTENDANCE SYSTEM SPECIFIC SETTINGS
# ============================================
# Cache TTL for attendance statistics (in seconds)
# Default: 3600 (1 hour)
ATTENDANCE_CACHE_TTL=3600

# Maximum students per bulk attendance request
# Default: 100
ATTENDANCE_BULK_LIMIT=100

# Default pagination per page
# Default: 15
PAGINATION_PER_PAGE=15
